#############################################
# FastAPI (core)
#############################################
PROJECT_NAME=fastapi-app
ENV=development
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

#############################################
# Auth / Encryption
#############################################
# 32+ bytes, url-safe. Rotate for prod.
SECRET_KEY=change_me_to_a_random_64_char_string
# If you use a separate field-level encryption key:
ENCRYPT_KEY=change_me_to_a_random_44_char_base64_string

#############################################
# Database (SQLite)
#############################################
# Typical SQLAlchemy URL for SQLite file in project root
DATABASE_URL=sqlite:///./app.db
# If your code expects individual parts instead, you can omit and compute from this.

#############################################
# Generative AI (Gemini)
#############################################
GEMINI_API_KEY=put_your_google_generative_ai_key_here

#############################################
# OAuth2
#############################################
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=